<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>2.0.0-beta1</Version>
    <Description>A lightweight, database first, micro ORM</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>EntityLite.Core</PackageId>
    <RootNamespace>inercya.EntityLite</RootNamespace>
    <Authors>Jesús López</Authors>
    <Company>i-nercya intelligent software</Company>
    <Product>EntityLite.Core</Product>
    <Copyright>Copyright  2017</Copyright>
    <PackageIconUrl>http://www.i-nercya.com/EntityLite.png</PackageIconUrl>
    <PackageProjectUrl>https://www.codeproject.com/Articles/753796/i-nercya-EntityLite-A-Lightweight-Database-First-M</PackageProjectUrl>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>
    <PackageTags>Micro-ORM ORM SQL DAL Database SQLServer SQLite MySQL Npgsql Postgres PostgreSQL ORACLE EntityLite</PackageTags>
    <RepositoryUrl>https://github.com/jesuslpm/EntityLite</RepositoryUrl>
    <AssemblyName>EntityLite</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SqliteProfiler\EntityLiteProfile.db" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="SqliteProfiler\EntityLiteProfile.db" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.0.0" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.4.0" />
    <PackageReference Include="System.Data.Common" Version="4.3.0" />
    <PackageReference Include="System.Data.SqlClient" Version="4.4.0" />
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="SqliteProfiler\DataLayer.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>DataLayer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="SqliteProfiler\DataLayer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>DataLayer.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="COPY $(TargetDir)EntityLite.dll $(SolutionDir)nuget\Core\lib\netstandard2.0 /Y&#xD;&#xA;COPY $(TargetDir)EntityLite.pdb $(SolutionDir)nuget\Core\lib\netstandard2.0 /Y" />
  </Target>

</Project>
